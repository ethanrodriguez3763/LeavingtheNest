<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProductsActivity">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Supplies"
        android:textAlignment="center"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Click the images below to find our reccomended products for cleaning, laundry and cooking"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />


    <ImageButton
        android:id="@+id/cleaningImageButton"
        android:layout_width="175dp"
        android:layout_height="140dp"
        android:contentDescription="cleaning Image Button"
        android:scaleType="fitXY"
        android:src="@drawable/cleaningclipart"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Cleaning"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="@+id/cleaningImageButton"
        app:layout_constraintStart_toStartOf="@+id/cleaningImageButton"
        app:layout_constraintTop_toBottomOf="@+id/cleaningImageButton" />

    <ImageButton
        android:id="@+id/laundryImageButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="laundry Image Button"
        android:scaleType="fitCenter"
        android:src="@drawable/laundryclipart"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView7" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Laundry"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="@+id/laundryImageButton"
        app:layout_constraintStart_toStartOf="@+id/laundryImageButton"
        app:layout_constraintTop_toBottomOf="@+id/laundryImageButton" />

    <ImageButton
        android:id="@+id/cookingImageButton"
        android:layout_width="274dp"
        android:layout_height="218dp"
        android:contentDescription="cooking Image Button"
        android:scaleType="fitCenter"
        android:src="@drawable/cookingsupplies"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView11" />

    <TextView
        android:id="@+id/textView15"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Cooking"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="@+id/cookingImageButton"
        app:layout_constraintStart_toStartOf="@+id/cookingImageButton"
        app:layout_constraintTop_toBottomOf="@+id/cookingImageButton" />


</androidx.constraintlayout.widget.ConstraintLayout>